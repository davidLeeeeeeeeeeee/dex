{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Debug main",
            "type": "go",
            "request": "launch",
            "mode": "auto",
            "program": "${workspaceFolder}/cmd/main",
            "cwd": "${workspaceFolder}",
            "console": "integratedTerminal",
            "env": {
                "GOMEMLIMIT": "6GiB",
                "GOGC": "80"
            }
        },
        {
            "name": "Debug current file",
            "type": "go",
            "request": "launch",
            "mode": "auto",
            "program": "${fileDirname}",
            "cwd": "${workspaceFolder}",
            "console": "integratedTerminal"
        },
        {
            "name": "Debug current test",
            "type": "go",
            "request": "launch",
            "mode": "test",
            "program": "${fileDirname}",
            "cwd": "${workspaceFolder}"
        },
        {
            "name": "Attach to process",
            "type": "go",
            "request": "attach",
            "mode": "local",
            "processId": 0
        },
        {
            "name": "Run print_files",
            "type": "go",
            "request": "launch",
            "mode": "auto",
            "program": "${workspaceFolder}/print/print_files.go",
            "cwd": "${workspaceFolder}"
        },
        {
            "name": "Run explorer",
            "type": "go",
            "request": "launch",
            "mode": "auto",
            "program": "${workspaceFolder}/cmd/explorer",
            "cwd": "${workspaceFolder}",
            "console": "integratedTerminal",
            "args": [
                "--node-data-dir",
                "./data/data_node_0"
            ],
            "preLaunchTask": "Clean explorer_data directory"
        },
        {
            "name": "Run npm dev",
            "type": "node-terminal",
            "request": "launch",
            "command": "npm run dev",
            "cwd": "${workspaceFolder}/explorer"
        },
        {
            "cwd": "${workspaceFolder}",
            "name": "Run simulateMain/tes.go",
            "request": "launch",
            "program": "${workspaceFolder}/simulateMain/tes.go",
            "type": "go",
            "console": "integratedTerminal",
            "env": {
                "GOMEMLIMIT": "6GiB",
                "GOGC": "80"
            },
            "mode": "auto"
        }
    ]
}
